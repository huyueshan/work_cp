<div class="flex-c" [hidden]="!loadpage" style="height:100%;">
  <div class="center_header">
    <!-- <app-header [username]="'test08'" [curpath]="'usercenter'"></app-header> -->
    <div class="left_ico">
      
    </div>
    <div class="right_nav ">
      <div class="flex-r nav_box">
          <a href="">购彩大厅</a>
          <a href="">返回大厅</a>
          <a href="">游戏规则</a>
          <a href="">联系客服</a>
      </div>
      <div  class="userinfo flex-r" style="height: 50px;">
          <span  class="title">欢迎您，</span>
          <span class="getinfo mr20" >test08</span>
          <span  class="title mr20">余额</span>
          <span  class="money">999999.99元</span>
      </div>
      
    </div>
  </div>
  <div class="usercontent flex-r">
    <div class="sidebox">
        <app-side [navtitle]="'用户中心'"
        [data]="usersidedata" [bgurl]="bgurl" #side></app-side>
    </div>
    <div class="flex-c content">


      <!-- 面包屑 -->
      <div class=" crumbs">
        <p>
          <a>{{side.navtitle}} ></a>
          <a>{{side.currentparent}} ></a>
          <span>{{side.currentitem}}</span>
        </p>
        <div *ngIf="side.currentitem==='充值记录'">
            <span class="btn chongzhi">{{now_lang.User_center.Inmoney_history}}</span>
            <span class="btn tixian">{{now_lang.User_center.Out_money_history}}</span>
        </div>
        <div *ngIf="side.currentitem==='站内短信'">
          <span class="btn chongzhi">{{now_lang.User_center.Message_box}}</span>
          <span class="btn tixian">{{now_lang.User_center.Outmessage_box}}</span>
        </div>
      </div>
      <!-- 表格内容 -->
      <div class="tablecontent">
        <router-outlet></router-outlet>
      </div>

    </div>

  </div>
  <!-- <div class="footer">
    <app-footer></app-footer>
  </div> -->

</div>