<div class="flex-c sscbox" [hidden]="!loadpage">
    <div>
        <app-header [username]="'test08'" [curpath]="'lottery'"></app-header>
    </div>
    <div class="flex-c ssccontain">
        <div class="contaner">
            <app-credtop [type]="'creditssc'"></app-credtop>
            <div class="flex-r mainbox">
                <div class="flex-c contentbox">
                    <div class="flex-r tabbox">
                        <div class="flex-r topl">
                            <i></i>
                            <strong>彩票百家乐</strong>
                        </div>
                        <div class="flex-r topr">
                            <span class="flex-r play">
                                <i></i>
                                <span>玩法说明</span>
                            </span>
                            <span class="flex-r operate">
                                <i></i>
                                <span>操作说明</span>
                            </span>
                        </div>
                    </div>
                    <div class="flex-r media ">
                        <div class="flex-c mediabox videobox">
                            <div class="flex-r head">
                                <p>
                                    <span class="color_y">主播：</span>
                                    <span>Lana</span>
                                </p>
                                <span class="flex-r onoff">

                                    <span (click)="vidon = false">
                                        <p *ngIf="vidon">关闭</p>
                                    </span>
                                    <span (click)="vidon = true">
                                        <p *ngIf="!vidon">开启</p>
                                    </span>
                                </span>
                            </div>
                            <div class="flex-r vcontent">

                                <i></i>
                            </div>

                        </div>
                        <div class="flex-r mediabox chatbox">
                            <!--======================= todo============ -->

                        </div>

                    </div>

                    <!-- 投注区域 -->
                    <div class="flex-c playbox">
                        <div class="flex-c desk">
                            <div class="add">
                                共计金额：
                                <strong class="color_y">{{addmoney}}</strong> 元
                            </div>

                            <div class="flex-r deskbg">
                                <div class="flex-r deskplay play0" [ngClass]="{play0_bg: actiondata[0].active}" (click)="palyclick(0)">
                                    <div class="flex-r betball" *ngIf="actiondata[0].active">
                                        <span class="flex-r betval">{{actiondata[0].value}}</span>
                                    </div>
                                    <div class="flex-c betinfo" [ngClass]="{acinfo:!actiondata[0].active}">
                                        <span>{{actiondata[0].name}}</span>
                                        <span class="color_y">{{actiondata[0].odds}}</span>
                                    </div>
                                </div>
                                <div class="flex-r deskplay play1" [ngClass]="{play1_bg: actiondata[1].active}" (click)="palyclick(1)">
                                    <div class="flex-r betball" *ngIf="actiondata[1].active">
                                        <span class="flex-r betval">{{actiondata[1].value}}</span>
                                    </div>
                                    <div class="flex-c betinfo">
                                        <span>{{actiondata[1].name}}</span>
                                        <span class="color_y">{{actiondata[1].odds}}</span>
                                    </div>
                                </div>
                                <div class="flex-r deskplay play2" [ngClass]="{play2_bg: actiondata[2].active}" (click)="palyclick(2)">
                                    <div class="flex-c betinfo" [ngClass]="{acinfo:!actiondata[2].active}">
                                        <span>{{actiondata[2].name}}</span>
                                        <span class="color_y">{{actiondata[2].odds}}</span>
                                    </div>
                                    <div class="flex-r betball" *ngIf="actiondata[2].active">
                                        <span class="flex-r betval">{{actiondata[2].value}}</span>
                                    </div>
                                </div>
                                <div class="flex-r deskplay play3" [ngClass]="{play3_bg: actiondata[3].active}" (click)="palyclick(3)">
                                    <div class="flex-c betinfo acinfo">
                                        <span>{{actiondata[3].name}}</span>
                                        <span class="color_y">{{actiondata[3].odds}}</span>
                                    </div>
                                    <div class="flex-r betball" *ngIf="actiondata[3].active">
                                        <span class="flex-r betval">{{actiondata[3].value}}</span>
                                    </div>
                                </div>
                                <div class="flex-r deskplay play4" [ngClass]="{play4_bg: actiondata[4].active}" (click)="palyclick(4)">
                                    <div class="flex-r betball" *ngIf="actiondata[4].active">
                                        <span class="flex-r betval">{{actiondata[4].value}}</span>
                                    </div>
                                    <div class="flex-c betinfo acinfo">
                                        <span>{{actiondata[4].name}}</span>
                                        <span class="color_y">{{actiondata[4].odds}}</span>
                                    </div>
                                </div>

                            </div>
                            <div class="flex-r deskball">
                                <div class="ballbox" *ngFor="let item of balldata; let i=index">
                                    <div class="ball" [ngStyle]="{'background-position-y': item.y}" (click)="ballclick(i)"></div>
                                </div>
                            </div>
                        </div>
                        <div class="flex-r butgroup">
                            <span (click)="clear()">清空</span>
                            <span (click)="sub()">确认投注</span>
                        </div>
                    </div>

                </div>
                <!-- 右边信息区内容 -->
                <div class="flex-c infobox">
                    <div class="infoitem userinfobox">
                        <span class="flex-r userinfo">
                            <i></i>
                            <span>赌神</span>
                        </span>
                        <span>账户余额：
                            <span class="color_y">9999.99</span> 元</span>
                        <span class="flex-r userbtngroup">
                            <span (click)="linkrouter('/usercenter/recharge')">充值</span>
                            <span (click)="linkrouter('/usercenter/withdrawdeposit')">提现</span>
                            <span>转账</span>
                        </span>
                    </div>
