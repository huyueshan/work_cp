* {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  font-size: 12px;
}

.flex-r {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
}

.flex-c {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: flex-start;
  align-items: flex-start;
}

.color_y {
  color: #fe8f00;
}
.infobox {
  width: 280px;
}

.infoitem {
  width: 100%;
  border-radius: 4px;
  overflow: hidden;
}

.userinfobox {
  padding: 30px 25px;
  color: white;
  background-color: #333;
  .userinfo {
    padding-bottom: 20px;
    i {
      width: 74px;
      height: 74px;
      border-radius: 50%;
      background-color: #111;
    }

    span {
      padding-left: 20px;
      font-size: 18px;
    }
  }
  .userbtngroup {
    width: 100%;
    padding-top: 16px;
    justify-content: space-between;
    span {
      width: 70px;
      height: 30px;
      line-height: 28px;
      text-align: center;
      background-color: #525151;
      color: #ccc;
      border: 1px solid #ccc;
      border-radius: 2px;
      cursor: pointer;
    }
    span:hover {
      color: white;
      border-color: #fe8f00;
      background-color: #fe8f00;
    }
  }
}
.resultinfobox {
  width: 100%;
  padding-top: 20px;
  .resultinfo{
    width: 100%;
    .tabtn {
      width: 100%;
      span {
        width: 50%;
        height: 50px;
        font-size: 16px;
        line-height: 50px;
        text-align: center;
        color: white;
        background-color: #333;
        cursor: pointer;
      }
      span.btnactive{
        color: white;
        border-color: #fe8f00;
        background-color: #fe8f00;
      }
    }
    .resultitem {
      width: 100%;
      height: 40px;
      line-height: 40px;
      font-size: 12px;
      justify-content: space-between;
      padding: 0 25px;
      background-color: #eee;
      border-bottom: 1px solid white;
      .resultitemr {
        strong {
          padding-right: 10px;
        }
      }
    }
    .resultitem:last-child {
      border-bottom: none;
    }
  }
}
.querybox {
  padding: 5px 20px;
  justify-content: flex-end;
  background-color: #eee;
  span:first-child {
    padding-right: 20px;
  }
  select#qishu {
    width: 100px;
    height: 30px;
    line-height: 28px;
    border-color: #ccc;
  }
}
.querybox,
.resultbox,
.resulttable {
  width: 100%;
}

.resulttable {
  height: 340px;
  background-color: white;
  overflow-y: scroll;
  table {
    table-layout: fixed;
    width: 100%;
    border: 1px solid #ccc;
    border-collapse: collapse;
    td {
      text-align: left;
      padding-left: 8px;
      height: 30px;
      border: 1px solid #ccc;
      .color_y {
        color: #fe8f00;
        padding: 0 4px;
      }
    }
  }
}



