.errtip{
    width: 100%;
      position: relative;
      overflow: hidden;
      text-align: center;
      min-height:26px;
  }
  .errtip .icon-err{
      position:absolute;
      left:10px;
      top:1px;
      width: 20px; height: 20px;
      background: url('../../images/log-reg.png') -100px -10px;
  }
      
  
  .errtip .alltip{
      width:100%;
      height: 22px;
      font-size: 12px;
      text-align: left;
      word-break: break-word ; 
      float:left;
      background-color: rgba(139, 139, 146, 0.5);
      color: red;
      padding:5px;
      border-radius:2px;
      padding-left:40px;
      margin-bottom:0px;
  }