.flex-r {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    align-items: center;
}

.flex-c {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-content: space-between;
}
.fl_c>div{
    float: left;
}
.usercontent {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    padding: 0px 0;
    align-content: flex-start;
    align-items: flex-start;
}

.sidebox {
    width: 230px; // min-height: 760px;
    height: 100%;
    padding-bottom: 30px;
    background-color: #313234;
    border: none;
    border-radius: 3PX;
    align-self: stretch;
}

a{
    text-decoration: none;
    color: white;
}
//  =========
.center_header{
    height: 50px;
    background-color: #b61010;
}
.left_ico{
    height: 100%;
    width: 80px;
    display: inline-block;
    background:url("../images/user_center/ico.png") center center no-repeat ;
}
.right_nav{
    height: 100%;
    width: 700px;
    display: inline-block;
    float: right;
    div{
        display: inline-block;
        line-height: 50px;
        color: white;
        overflow: hidden;
    }
    .userinfo{
        width: 240px;
        float: right;
        span{
            padding: 0 5px;
        }
        .money{
            color: #FDDF0F;
            font-weight: bold;
        }
        
    }
    .nav_box {
        /* text-align: center; */
        height: 50px;
        float: right;
        /* padding-top: 42px; */
        color: white;
        a{

            border-right: 1px solid #A11919;
            text-indent: 20px;
            padding: 5px 28px 5px 35px;
            background:url("../images/user_center/ico_small.png") center left 13px no-repeat ;

        }
    }
}




.content {
    width:calc(100% - 230px);
    height: 100%;
    padding-bottom: 30px;
    overflow : hidden;
    min-height: 530px;
    justify-content: flex-start;
}








.btn {
    display: inline-block;
    height: 30px;
    line-height: 28px;
    padding: 0 10px;
    font-size: 14px;
    color: #333;
    background-color: #ccc;
    border: 1px solid #999;
    border-radius: 2px;
    cursor: pointer;
}

.chongzhi,
.chongzhi:hover,
.tixian:hover {
    background-color: #fe8f00;
    border: 1px solid #c48c15;
    color: white;
    outline: none;
    box-shadow: none;
}

.btnb {
    width: 100px;
    height: 40px;
    line-height: 38px;
    font-size: 18px;
    text-align: center;
    padding-left: 15px;
    letter-spacing: 5px;
}

.cotmid span {
    font-size: 22px;
}

.cotmid small {
    font-size: 18px;
    font-weight: bold;
}

.cotmid strong {
    color: #fe8f00;
}

.cotinfo {
    font-size: 12px;
}

.crumbs {
    height: 30px;
    line-height: 30px;
    font-size: 14px;
    background-color: #F4F4F4;
}

.crumbs a {
    text-decoration: none;
    color: #9A9A9A;
    padding: 0 5px;
    cursor: pointer;
    //   cursor: pointer;
}

.crumbs span {
    padding: 0 10px;
    margin-left: 5px;
}

.tablecontent {
    width: 100%;
    height: 100%;
    overflow-y: scroll;
    overflow-x: hidden;
}

