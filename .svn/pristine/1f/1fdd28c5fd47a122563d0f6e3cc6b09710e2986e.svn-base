<div class="flex-c" [hidden]="!loadpage">
    <div>
        <app-header [username]="'test08'" [curpath]="'lottery'"></app-header>
    </div>
    <div class="flex-c guan" style="width:100%" *ngIf="curgamestyle === '官'">
        <div class="flex-r result-head">
            <div class="flex-r result-head-in">
                <div class="game">
                    <label></label>
                    <select class="gamelist" [(ngModel)]="quergame" (change)="selechange()">
                        <option *ngFor="let item of gamelist; let i=index">{{item.gamename}}</option>
                    </select>
                </div>
                <div class="flex-r checkbox-box">
                    标注形式选择
                    <label class="flex-r">
                        <input type="checkbox" name="checkbox" id="freeLine" [(ngModel)]="view_paramet.isshowline" />显示走势折线
                    </label>
                    <label class="flex-r">
                        <input type="checkbox" name="checkbox" value="checkbox" id="haowen" [(ngModel)]="view_paramet.ishaowen" />显示号温
                    </label>
                    <label class="flex-r">
                        <input type="checkbox" name="checkbox" value="checkbox" id="yl_zhu" [(ngModel)]="view_paramet.isomission" />显示遗漏分层
                    </label>
                    <label class="flex-r">
                        <input type="checkbox" name="checkbox2" value="checkbox" id="c_yl" [(ngModel)]="view_paramet.isomissionshow" />显示遗漏
                    </label>
                    <label class="flex-r">
                        <input type="checkbox" name="checkbox3" value="checkbox" id="disdata" [(ngModel)]="view_paramet.isdisdata" />显示统计
                    </label>
                    <label class="flex-r">
                        <input type="checkbox" name="checkbox3" value="checkbox" id="help_line" [(ngModel)]="view_paramet.issubline" />显示辅助线
                    </label>
                </div>
                <div class="flex-r period">
                    <a *ngFor="let item of numbdata; let i=index" [ngClass]="{active: numbdatactve===i}" (click)="numbclick(i)">最近{{item}}期</a>
                </div>
            </div>
        </div>
        <div class="loadinginfo" *ngIf="loadinfo">
            <p>正在获取数据中...</p>
        </div>
        <div class="flex-c main">
            <div class="flex-r mainbox" *ngIf="!loadinfo">
                <!-- 官方表格划线彩种 -->
                <div class="flex-r result-main" *ngIf="curgametype==='ssc'||curgametype==='exf'||curgametype==='pk10'||curgametype==='fc3d'||curgametype==='k3'">
                    <app-canvas [viewdata]="view_paramet" [resultdata]="resultdata" [omdata]="resultomdata" [type]="curgametype" #canvas></app-canvas>
                </div>

                <!-- 官方快乐8系列 -->
                <div class="flex-r result-main" *ngIf="curgametype==='kl8'">
                    <div class="flex-c tablebox">
                        <table width=auto border="0" cellpadding="0" cellspacing="0" align="center">
                            <thead>
                                <tr>
                                    <th style="width: 100px">期号</th>
                                    <th colspan="20">开奖号码</th>
                                    <th>大小</th>
                                    <th>单双</th>
                                    <th>上下</th>
                                    <th>奇偶</th>
                                    <th>总计</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr *ngFor="let item of resultdata">
                                    <td>{{item.number}}</td>
                                    <td *ngFor="let child of item.data">{{child}}</td>
                                    <td class="color1">{{item.bigSmall}}</td>
                                    <td>{{item.danShuang}}</td>
                                    <td class="color1">{{item.upDown}}</td>
                                    <td>{{item.evenOdd}}</td>
                                    <td class="color1">{{item.sum}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="flex-c xin" style="width:100%" *ngIf="curgamestyle === '信'">
        <div class="flex-r result-head">
            <div class="flex-r result-head-in">
                <div class="game">
                    <label>游戏：</label>
                    <select class="gamelist" [(ngModel)]="quergame" (change)="selechange()">
                        <option *ngFor="let item of gamelist; let i=index">{{item.gamename}}</option>
                    </select>
                </div>
                <div class="flex-r querybox">
                    <label class="flex-r">范围：
                        <input type="date" id="starttime" name="starttime" [(ngModel)]="c" />
                    </label>
                    <label class="flex-r"> ~
                        <input type="date" id="endtime" name="endtime" [(ngModel)]="querydata.endtime" />
                    </label>
                    <label class="flex-r">期数：
                        <input type="text" name="qishu" [(ngModel)]="querydata.qishu" />
                    </label>
                    <span>查询</span>
                </div>
                <div class="flex-r period">
                    <span>搅珠日期表</span>
                    <span>刷新</span>
                    <select name="rest" id="serest">
                        <option value="0" selected>不刷新</option>
                        <option value="1">10</option>
                        <option value="2">30</option>
                        <option value="3">60</option>
                        <option value="4">120</option>
                        <option value="5">500</option>
                    </select>
                </div>
            </div>
        </div>

    </div>

</div>