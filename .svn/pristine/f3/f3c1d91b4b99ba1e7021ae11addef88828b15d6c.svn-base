@charset "UTF-8";
@import '../../images/common';
html,body {height:100%;}
$yellow:#fe8f00;

.flex-r {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    align-items: center;
  }
  .flex-c {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-content: space-between;
  }
  
.nav{
	width:100%;
	position:relative;
	float:left;
}

.topbox{
	width:1200px;
	margin:0 auto;
	overflow:hidden;
	height:40px;
	.topleft{
		float:left;
		overflow:hidden;
		height:40px;
		.time{
            float:left;
            width:150px;
			height:15px;
			line-height:15px;
			border-right:1px solid #ffffff;
			padding-right:10px;
			color:#fff;
			margin-top:12px;
			font-size:14px;
		}
		.language{
			margin-top:9px;
			float:left;
			margin-left:10px;
			cursor:pointer;
			img{
				height:16px;
			}
		}
	}
	.topright{
		float:right;
		overflow:hidden;
        height:40px;
		.userinfo{
			float:left;
			padding:10px;
			font-size:14px;
			color:#fff;
			.title{
				float:left;
				font-size: 14px;
			}
			.getinfo{
				float:left;
                color:$yellow;
                text-decoration: none;
			}
			.mr20{
				margin-right:20px;
			}
			.ml10{
				margin-left:20px;
			}
			.money{
				float:left;
				color:$yellow;
			}
			.titlerel{
				float:left;
				margin-left:10px;
				margin-top:3px;
				cursor:pointer;
			}
			.bg-refaul_03.active{
				transition:100s linear;
				transform:rotate(36000deg);
			}
		}
		.centerlist{
			float:left; 
			height:40px;
			padding:12px 0px;
			margin-left:20px;
			font-size: 12px;
			li{
				float:left;
				color:#fff;
				list-style:none;
				padding:0px 10px;
				height:14px;
				line-height:14px;
				border-right:1px solid #fff;
				a{
					color:#fff;
					cursor:pointer;
					:hover{
						color:$yellow;
					}
				}
			}
			:last-child{
				padding-right:0px;
				border-right:none;
			}
			
		}
	}
}

.headbox{
	width:1200px;
	margin:0 auto;
	overflow:hidden;
	height:80px;
	padding:10px 0px;
	.headleft{
		float:left;
		overflow:hidden;
		height:100%;
		width:370px;
		.logo{
			height:60px;
		}
	}

	.headright{
		float:right;
		overflow:hidden;
		height:100%;
		width:830px;
		.navtab{
			float:right; 
			padding:12px 0px;
			margin-left:20px;
			li{
				float:left;
				color:#fff;
				list-style:none;
				margin-right:45px;
				.pc{
					font-size:16px;
					text-align:center;
					margin-bottom:0px;
					font-weight:bold;
				}
				.pe{
					font-size:12px;
					text-align:center;
					width:100%;
					margin-bottom:0px;
				}
				a{
					color:#333;
					cursor:pointer;
					text-decoration:none;
					:hover{
						color:$yellow;
					}
				}
				:hover{
					color:$yellow;
                }
                .color_y{
                    color:$yellow;
                }
			}
			:last-child{
				margin-right:0px;
			}
			
		}
	}
	.headright.en .navtab li{
		margin-right:19px;
	}
}
.banner{
    width:100%;
	float:left;
	text-align:center;
	height:200px;
	background:url('../../images/banner_10.jpg') center no-repeat;
	background-size: cover;
}
.container{
	width:100%;
	padding:0;
	zoom:1;
}
.container::after{
	content: "";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
	overflow: hidden;

}

/* 语言 */
  .language_btn_box {
    min-width: 80px!important;
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: around;
    align-items: center;
    padding: 0!important;
  }
  .language_btn {
    height: 100%;
    width: 33%;
    cursor:pointer;
    background-color: #fff;
  }
  .chinese {
    background: url(../../static/language/img/lan1.png) center center no-repeat;
  }
  .english {
    background: url(../../static/language/img/lan2.png) center center no-repeat;
  }
  .japanese {
    background: url(../../static/language/img/lan3.png) center center no-repeat;
  }
/* 语言 */

