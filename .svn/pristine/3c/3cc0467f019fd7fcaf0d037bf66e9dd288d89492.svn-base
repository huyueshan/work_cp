    <div class="flex-c content">
        <div class="flex-r contenttop">
            <span class="flex-r itembox" *ngFor="let item of contenttoptitle">
                <span class="item1">号码</span>
                <span class="item2">赔率</span>
                <span class="item3" [hidden]="selectbtnvalue == 1">金额</span>
            </span>

        </div>
        <div class="flex-r conmain">
            <span class="flex-r itembox" *ngFor="let item of betdata;let i=index" [ngStyle]="{'order': item.order}">
                <span class="item1">
                    <span>{{item.numb}}</span>
                </span>
                <span class="item2 color_y">{{(2.29+(rangevalue/0.078*0.00191)).toFixed(3)}} </span>
                <span class="item3" [hidden]="selectbtnvalue == 1">
                    <input type="text" class="inmoney" name="inmoney" [(ngModel)]="item.value" (focus)="inmoneyfocus($event,i)" (blur)="inmoneyblur()">
                </span>
            </span>
        </div>
        <div class="subbox">
            <span class="flex-r btngroup">
                <input type="text" class="inmoney" name="inmoney" [(ngModel)]="setallmoney.value" [hidden]="selectbtnvalue !== 1"  (focus)="inmoneyfocus($event,'all')" (blur)="inmoneyblur()"> &nbsp;&nbsp;&nbsp;
                <button class="btnactive">确定</button> &nbsp;&nbsp;&nbsp;
                <button (click)="reset()">取消</button>
            </span>

        </div>
    </div>
    <div id="selectbox" [ngStyle]="{'top': boxposition.y, 'left': boxposition.x}" [hidden]="!boxshow">
            <div class="flex-c selectwrap">
                <i></i>
                <span class="option" (click)="optinclick(100)">100元</span>
                <span class="option" (click)="optinclick(200)">200元</span>
                <span class="option" (click)="optinclick(500)">500元</span>
                <span class="option" (click)="optinclick(1000)">1000元</span>
                <span class="option" (click)="optinclick(5000)">5000元</span>
            </div>

        </div>

</div>