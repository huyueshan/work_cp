.flex-r {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  align-items: center;
}
.flex-c {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: space-between;
}
.bg_1 {
  background-color: #f5f5f5;
}
.bg_2 {
  background-color: #ccc;
}
.container {
  width: 950px;
  padding: 0;
  align-content: flex-start;
  align-items: flex-start;
}
input {
  width: 132px;
  height: 30px;
  line-height: 20px;
  padding: 5px 0 4px 5px;
  border: 1px solid #ccc;
}
input[type="checkbox"] {
  width: 16px;
  height: 16px;
  border: 1px solid #ccc;
  margin-top: 0;
}
select {
  width: 100px;
  height: 30px;
  line-height: 20px;
  border: 1px solid #ccc;
}
.querycontent {
  width: 100%;
  height: 50px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-bottom: none;
//   border-radius: 3px;
  background-color: #f5f5f5;
}
.query_item {
  flex: none;
  padding-right: 20px;
}
.querybtn {
  width: 70px;
  height: 30px;
  line-height: 28px;
  padding: 0;
  text-align: center;
  background-color: #fe8f00;
  color: white;
  outline: none;
}
#wrap {
  outline: none;
  width: 14px;
  height: 14px;
}
.tablebox {
  width: 100%;
//   padding: 10px 0 0;
}

.tablewrap {
  width: 100%;
  height: 400px;
  overflow-y: scroll;
  // border: 1px solid #ccc;
}
.tablebox table {
  table-layout: fixed;
  border: 1px solid #ccc;
  border-collapse: collapse;
  border-top: none;
  border-bottom: none;
  width: 100%;
}
table th, .trbold {
  font-size: 14px;
  font-weight: bold;
}
table th,
table td {
  text-align: center;
  height: 40px;
  border: 1px solid #ccc;
}
.padright{
    padding-right: 20px;
}
.sortr strong{
    cursor: pointer;
}
.sortr strong:hover{
    color: #fe8f00;
}
