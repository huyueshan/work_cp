.color_y {
  color: #fe8f00;
}
.viewbox{
    width:100%;
    padding: 20px 0;
}
.draw{
    width:100%;
    height: 400px;
    background-color: #f5f5f5;
    border: 1px solid #ccc;
    // 临时样式
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 50px;
    font-weight: bold;
}
